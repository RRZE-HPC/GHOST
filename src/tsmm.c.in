#GHOST_FUNC_BEGIN#BLOCKSZ1=${CFG_BLOCKVECTOR_SIZES}#BLOCKSZ2=${CFG_BLOCKVECTOR_SIZES}
ghost_error_t ghost_tsmm__d_BLOCKSZ1_BLOCKSZ2(ghost_densemat_t *x, ghost_densemat_t *v, ghost_densemat_t *w, void *alpha, void *beta)
{
    GHOST_FUNC_ENTER(GHOST_FUNCTYPE_MATH)
    ghost_error_t ret = GHOST_SUCCESS;

    ghost_lidx_t k = w->traits.ncols;
    ghost_lidx_t m = v->traits.ncols;
    ghost_lidx_t n = v->traits.nrows;

    if (k != BLOCKSZ1) {
        ERROR_LOG("Invalid dimensions");
        ret = GHOST_ERR_INVALID_ARG;
        goto err;
    }
    if (m != BLOCKSZ2) {
        ERROR_LOG("Invalid dimensions");
        ret = GHOST_ERR_INVALID_ARG;
        goto err;
    }

    INFO_LOG("In TSMM with two fixed block sizes %"PRLIDX"x%"PRLIDX" <- %"PRLIDX"x%"PRLIDX" * %"PRLIDX"x%"PRLIDX,n,k,n,m,m,k);

    double * restrict vval, * restrict wval, * restrict xval;
    ghost_lidx_t ldv, ldw, ldx;

    ldv = *v->stride;
    ldw = *w->stride;
    ldx = *x->stride;

    ghost_densemat_valptr(v,(void **)&vval);
    ghost_densemat_valptr(w,(void **)&wval);
    ghost_densemat_valptr(x,(void **)&xval);

    double dalpha = *(double *)alpha;
    double dbeta = *(double *)beta;
    ghost_lidx_t i,j,s;
    
    //if (BLOCKSZ1 <= 4) 
    {
#pragma omp parallel for private(j,s) schedule(runtime)
        for (i=0; i<n; i++) {
            for (s=0; s<BLOCKSZ1; s++) {
                xval[i*ldx+s] = dbeta*xval[i*ldx+s];
#pragma simd
#pragma vector aligned
#pragma vector always
#pragma ivdep
                for (j=0; j<BLOCKSZ2; j++) {
                    xval[i*ldx+s] += dalpha*vval[i*ldv+j]*wval[s*ldw+j];
                }
            }
        }
    } 
    /*else 
    {
#pragma omp parallel for private(j,s) schedule(runtime)
        for (i=0; i<n; i++) {
            for (j=0; j<m; j++) {
#pragma simd
#pragma vector aligned
#pragma vector always
#pragma ivdep
                for (s=0; s<BLOCKSZ1; s++) {
                    xval[i*ldx+s] += dalpha*vval[i*ldv+j]*wval[s*ldw+j];
                }
            }
        }
    } */   


    goto out;
err:

out:
    GHOST_FUNC_EXIT(GHOST_FUNCTYPE_MATH)
    return ret;
}
#GHOST_FUNC_END

#GHOST_FUNC_BEGIN#BLOCKSZ1=${CFG_BLOCKVECTOR_SIZES}
ghost_error_t ghost_tsmm__d_BLOCKSZ1_x(ghost_densemat_t *x, ghost_densemat_t *v, ghost_densemat_t *w, void *alpha, void *beta)
{
    GHOST_FUNC_ENTER(GHOST_FUNCTYPE_MATH)
    ghost_error_t ret = GHOST_SUCCESS;

    ghost_lidx_t k = w->traits.ncols;
    ghost_lidx_t m = v->traits.ncols;
    ghost_lidx_t n = v->traits.nrows;

    if (k != BLOCKSZ1) {
        ERROR_LOG("Invalid dimensions");
        ret = GHOST_ERR_INVALID_ARG;
        goto err;
    }

    
    INFO_LOG("In TSMM with one fixed block size %"PRLIDX"x%"PRLIDX" <- %"PRLIDX"x%"PRLIDX" * %"PRLIDX"x%"PRLIDX,n,k,n,m,m,k);

    double * restrict vval, * restrict wval, * restrict xval;
    ghost_lidx_t ldv, ldw, ldx;

    ldv = *v->stride;
    ldw = *w->stride;
    ldx = *x->stride;

    ghost_densemat_valptr(v,(void **)&vval);
    ghost_densemat_valptr(w,(void **)&wval);
    ghost_densemat_valptr(x,(void **)&xval);

    double dalpha = *(double *)alpha;
    double dbeta = *(double *)beta;
    ghost_lidx_t i,j,s;
    
    if (BLOCKSZ1 <= 4) 
    {
#pragma omp parallel for private(j,s) schedule(runtime)
        for (i=0; i<n; i++) {
            for (s=0; s<BLOCKSZ1; s++) {
                xval[i*ldx+s] = dbeta*xval[i*ldx+s];
#pragma simd
#pragma vector aligned
#pragma vector always
#pragma ivdep
                for (j=0; j<m; j++) {
                    xval[i*ldx+s] += dalpha*vval[i*ldv+j]*wval[s*ldw+j];
                }
            }
        }
    } 
    else 
    {
#pragma omp parallel for private(j,s) schedule(runtime)
        for (i=0; i<n; i++) {
#pragma simd
#pragma vector aligned
#pragma vector always
#pragma ivdep
            for (s=0; s<BLOCKSZ1; s++) {
                xval[i*ldx+s] = dbeta*xval[i*ldx+s];
            }
            for (j=0; j<m; j++) {
#pragma simd
#pragma vector aligned
#pragma vector always
#pragma ivdep
                for (s=0; s<BLOCKSZ1; s++) {
                    xval[i*ldx+s] += dalpha*vval[i*ldv+j]*wval[s*ldw+j];
                }
            }
        }
    }    


    goto out;
err:

out:
    GHOST_FUNC_EXIT(GHOST_FUNCTYPE_MATH)
    return ret;
}
#GHOST_FUNC_END
